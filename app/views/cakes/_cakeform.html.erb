<%= form_for customer_cakes_path do |f| %>
    <%= f.label "Title of cake:" %><br>
    e.g. Bridal cake
   <br><%= f.text_field :title %><br>
    <br><%= f.label "Number of tiers on cake:" %><br>
    <br><%= f.number_field :number_tiers, in: 1...10 %><br>
    <%= f.hidden_field (:customer_id) %>  
        
    <%= button_to "Create cake", customer_cakes_path, method: :post %> 
    <% end %>
    <%= render 'shared/links' %>