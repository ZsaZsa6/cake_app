<%= form_with model: @cake do |f| %>
    Cake Title: <%= @cake.title %><br>
Number of Tiers: <%= @cake.number_tiers %>
   

    <%= f.fields_for :tiers do |tier_attributes|%>
        <br>
        <br>
    
        <%= tier_attributes.label "Tier Flavor" %>
        <%= tier_attributes.select(:flavor, ['Chocolate', 'Vanilla', 'Strawberry', 'Maple']) %><br>
        <%= tier_attributes.label "Frosting" %> 
        <%= tier_attributes.select(:frosting, ['Chocolate', 'Vanilla', 'Cream Cheese', 'Maple']) %><br>
        <%= tier_attributes.label "Filling" %>
        <%= tier_attributes.select(:filling, ['Chocolate', 'Vanilla Cream', 'Cream Cheese', 'Maple', 'Cookies n Cream', 'Strawberries & Cream']) %><br>
        <%= tier_attributes.label "Tier size in inches"%>
        <%= tier_attributes.number_field :size, in: 4...21, step: 2 %><br>
        <%= tier_attributes.label "Shape of tier" %>
        <%= tier_attributes.select(:shape, ['Square', 'Round', 'Oval']) %>
        <%= tier_attributes.label "Instructions" %>
        <%= tier_attributes.text_area :instructions %>
        <% end %>
        <%= link_to "Create Tiers", cake_tiers_path, { action: "create" } %>
        <% end %>
        
    
     